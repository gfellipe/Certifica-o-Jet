@{

    ViewBag.Title = string.IsNullOrEmpty(LojaCorp.Control.Company._Company.Title) ?
            LojaCorp.Control.Company._Company.NameStore : LojaCorp.Control.Company._Company.Title;
    Layout = "~/Views/Shared/Base/_Layout.cshtml";

    string PathLogo = "/assets/image/logo/logo.png";

    Uri Url = System.Web.HttpContext.Current.Request.Url;

    string UrlLogo = Url.Scheme + "://" + Url.Host + PathLogo;

}

@section CustomSeo{
@{

    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:image" content="@UrlLogo" />
}
}

@section custom_js {
<script>
    $(document).ready(function () {
        var carros = [
          {
            marca: "BMW",

            modelo: "Z4 coup",

            ano: "2007",

            cor: "laranja",

            placa: "NEJ-6420",
          },

          {
            marca: "Honda",

            modelo: "Accord Coupe EX",

            ano: "1991",

            cor: "Preto",

            placa: "NEJ-5085",
          },

          {
            marca: "Peugeot",

            modelo: "207 Sedan Passion XR 1.4 Flex 8V 4p",

            ano: "2009",

            cor: "Bege",

            placa: "NES-0659",
          },

          {
            marca: "Fiat",

            modelo: "MOBI Like 1.0 Fire Flex 5p.",

            ano: "2017",

            cor: "Cinza",

            placa: "NEP-1151",
          },

          {
            marca: "Ford",

            modelo: "Ranger XLS 3.2 20V 4x4 CD Diesel Mec.",

            ano: "2013",

            cor: "Verde",

            placa: "NFA-5128",
          }
        ];

    const divConteudo = document.getElementById("conteudocertificacao")

        var busca = document.createElement("div");
        busca.innerHTML =
          '<input type="text" id="buscacertificacao" placeholder="Digite a placa do veículo">';
        divConteudo.appendChild(busca);
        var btnBusca = document.createElement("div");
        btnBusca.innerHTML = '<button id="btnBuscaCertificacao">Buscar</button>';
        divConteudo.appendChild(btnBusca);

        var modal = document.createElement("div");
        modal.innerHTML =
          '<div id="modalcertificacao" style="display: none;"><div id="modal-content"><span id="close">&times;</span><div id="modal-body"></div></div></div>';
        divConteudo.appendChild(modal);

        var modal = document.getElementById("modalcertificacao");
        var btn = document.getElementById("btnBuscaCertificacao");
        var span = document.getElementById("close");

        btn.onclick = function () {
          var placa = document.getElementById("buscacertificacao").value;
          var veiculo = carros.find(function (veiculo) {
            return veiculo.placa === placa;
          });
          if (veiculo) {
            modal.style.display = "block";
            document.getElementById("modal-body").innerHTML =
              "<p>Placa: " +
              veiculo.placa +
              "</p><p>Marca: " +
              veiculo.marca +
              "</p><p>Modelo: " +
              veiculo.modelo +
              "</p><p>Cor: " +
              veiculo.cor +
              "</p><p>Ano: " +
              veiculo.ano +
              "</p>";
          } else {
            alert("Veículo não encontrado");
          }
        };

        span.onclick = function () {
          modal.style.display = "none";
        };

        window.onclick = function (event) {
          if (event.target == modal) {
            modal.style.display = "none";
          }
        };
    })
</script>
}

<div id="conteudocertificacao">

</div>



